{
  "info": {
    "name": "Tlamatini - API Donaciones",
    "description": "Colección para probar la API de donaciones de Tlamatini",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "BASE_URL",
      "value": "http://localhost:3000/api",
      "type": "string"
    },
    {
      "key": "TOKEN",
      "value": "",
      "type": "string"
    }
  ],
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{TOKEN}}",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "1. Login (obtener token)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"correo\": \"test@tlamatini.org\",\n  \"password\": \"123456\"\n}"
        },
        "url": {
          "raw": "{{BASE_URL}}/auth/login",
          "host": ["{{BASE_URL}}"],
          "path": ["auth", "login"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 200) {",
              "  const response = pm.response.json();",
              "  pm.collectionVariables.set('TOKEN', response.data.token);",
              "  console.log('Token guardado:', response.data.token);",
              "}"
            ]
          }
        }
      ]
    },
    {
      "name": "2. Registrar Donación Monetaria",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"tipo\": \"monetaria\",\n  \"monto\": 500.00,\n  \"descripcion\": \"Donación para apoyo a programas educativos\"\n}"
        },
        "url": {
          "raw": "{{BASE_URL}}/donaciones",
          "host": ["{{BASE_URL}}"],
          "path": ["donaciones"]
        }
      }
    },
    {
      "name": "3. Registrar Donación Deducible",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"tipo\": \"deducible\",\n  \"monto\": 1000.00,\n  \"descripcion\": \"Donación deducible de impuestos\",\n  \"datos_fiscales\": {\n    \"rfc\": \"XAXX010101000\",\n    \"razon_social\": \"Juan Pérez García\",\n    \"uso_cfdi\": \"G03\"\n  }\n}"
        },
        "url": {
          "raw": "{{BASE_URL}}/donaciones",
          "host": ["{{BASE_URL}}"],
          "path": ["donaciones"]
        }
      }
    },
    {
      "name": "4. Registrar Donación en Especie",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"tipo\": \"especie\",\n  \"descripcion\": \"Donación de 20 libros de texto para nivel primaria, en buen estado\",\n  \"evidencia_url\": \"https://example.com/imagen-evidencia.jpg\"\n}"
        },
        "url": {
          "raw": "{{BASE_URL}}/donaciones",
          "host": ["{{BASE_URL}}"],
          "path": ["donaciones"]
        }
      }
    },
    {
      "name": "5. Obtener Donación por ID",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{BASE_URL}}/donaciones/1",
          "host": ["{{BASE_URL}}"],
          "path": ["donaciones", "1"]
        }
      }
    },
    {
      "name": "6. Listar Donaciones del Usuario",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{BASE_URL}}/usuarios/999/donaciones?page=1&limit=10",
          "host": ["{{BASE_URL}}"],
          "path": ["usuarios", "999", "donaciones"],
          "query": [
            {
              "key": "page",
              "value": "1"
            },
            {
              "key": "limit",
              "value": "10"
            }
          ]
        }
      }
    },
    {
      "name": "7. Estadísticas de Donaciones",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{BASE_URL}}/usuarios/999/donaciones/estadisticas",
          "host": ["{{BASE_URL}}"],
          "path": ["usuarios", "999", "donaciones", "estadisticas"]
        }
      }
    },
    {
      "name": "8. Error - Donación sin monto",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"tipo\": \"monetaria\",\n  \"descripcion\": \"Prueba de error\"\n}"
        },
        "url": {
          "raw": "{{BASE_URL}}/donaciones",
          "host": ["{{BASE_URL}}"],
          "path": ["donaciones"]
        }
      }
    },
    {
      "name": "9. Error - Sin autenticación",
      "request": {
        "method": "GET",
        "header": [],
        "auth": {
          "type": "noauth"
        },
        "url": {
          "raw": "{{BASE_URL}}/donaciones/1",
          "host": ["{{BASE_URL}}"],
          "path": ["donaciones", "1"]
        }
      }
    }
  ]
}